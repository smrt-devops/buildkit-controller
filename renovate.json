{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":enableVulnerabilityAlertsWithLabel(security)",
    ":semanticCommits",
    ":semanticCommitTypeAll(chore)"
  ],
  "labels": ["dependencies"],
  "prConcurrentLimit": 5,
  "prHourlyLimit": 2,
  "packageRules": [
    {
      "matchManagers": ["gomod"],
      "groupName": "Go dependencies",
      "labels": ["dependencies", "go"],
      "commitMessagePrefix": "chore(deps):",
      "schedule": ["before 10am on monday"],
      "separateMinorPatch": true,
      "postUpdateOptions": ["gomodTidy"]
    },
    {
      "matchManagers": ["github-actions"],
      "groupName": "GitHub Actions",
      "labels": ["dependencies", "github-actions"],
      "commitMessagePrefix": "chore(ci):",
      "schedule": ["before 10am on monday"]
    },
    {
      "matchManagers": ["dockerfile"],
      "groupName": "Docker base images",
      "labels": ["dependencies", "docker"],
      "commitMessagePrefix": "chore(docker):",
      "schedule": ["before 10am on monday"],
      "pinDigests": true
    },
    {
      "matchManagers": ["helm"],
      "groupName": "Helm chart dependencies",
      "labels": ["dependencies", "helm"],
      "commitMessagePrefix": "chore(helm):",
      "schedule": ["before 10am on monday"]
    },
    {
      "matchPackageNames": ["golang.org/x/*"],
      "groupName": "golang.org/x packages"
    },
    {
      "matchPackageNames": ["k8s.io/*", "sigs.k8s.io/*"],
      "groupName": "Kubernetes dependencies",
      "labels": ["dependencies", "kubernetes"]
    },
    {
      "matchPackageNames": ["github.com/coreos/go-oidc/*"],
      "groupName": "OIDC dependencies"
    },
    {
      "matchUpdateTypes": ["major"],
      "labels": ["dependencies", "major-update"],
      "enabled": true
    },
    {
      "matchUpdateTypes": ["minor", "patch"],
      "labels": ["dependencies", "minor-update"],
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash"
    },
    {
      "matchDepTypes": ["indirect"],
      "labels": ["dependencies", "indirect"]
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security", "dependencies"],
    "assignees": [],
    "reviewers": []
  },
  "ignoreDeps": [],
  "rangeStrategy": "update-lockfile",
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 10am on the first day of the month"]
  },
  "schedule": ["before 10am on monday"],
  "timezone": "UTC",
  "automerge": false,
  "automergeType": "pr",
  "platformAutomerge": true,
  "requiredStatusChecks": null,
  "prCreation": "not-pending",
  "rebaseWhen": "behind-base-branch",
  "rebaseStalePrs": true,
  "updateLockFiles": true,
  "separateMinorPatch": true
}
